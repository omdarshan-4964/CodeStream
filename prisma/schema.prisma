// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // We will store a hashed password
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation: A user can own multiple workspaces
  workspaces Workspace[]
}

// Workspace model for collaborative projects
model Workspace {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation: A workspace belongs to one user
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  files File[]
}

model File {
  id          String    @id @default(cuid())
  name        String
  content     String    @db.Text // Use Text for potentially long file content
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // RELATION: A file belongs to one workspace
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
}